{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<div class="container  ">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger">{{ flashError }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <br>
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h1>S'incrire</h1>
    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.birthdate) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button class="logg btn-lg btn-primary " type="submit">S'inscrire</button>
    {{ form_end(registrationForm) }}

</div>

  <script>
document.querySelector('[for=registration_form_agreeTerms]').setAttribute('class','checkbox-custom custom-control-label required text-primary');
</script>
{% endblock %}
