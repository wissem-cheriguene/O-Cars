{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<div class="container pt-3">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger">{{ flashError }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <br>
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="text-center">Inscription</h1>
    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.birthdate) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-primary" style="display:inline-block;width: 100%;height: 5vh;">Enregistrer</button>
    {{ form_end(registrationForm) }}

</div>

  <script>
document.querySelector('[for=registration_form_agreeTerms]').setAttribute('class','checkbox-custom custom-control-label required text-primary');
</script>
{% endblock %}
