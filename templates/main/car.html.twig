{# Page d'une voiture #}
{% block title %}{{car.title}}{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
{% dump(car)%}
<div class="container mt-5">
  <div class="row">
    {# Info de l'annonce  #}
    <div class="col-lg-6 col-md-6 mb-4">
      <div class="card h-100">  
          <div class="card-body">
            <h4 class="card-title">
              {{ car.year|date('Y') }} {{ car.brand.name }} {{car.model}} <br><span class="badge badge-secondary ">{{ car.city.name }} ({{ car.city.postalCode }})</span> 
            </h4>
            <h5>{{ car.price}} &euro;</h5>
            <p class="card-text">{{ car.description }}</p>
          </div>
          <div class="card-footer">
            <small class="text-muted">★ ★ ★ ★ ☆</small>
          </div>
      </div>  
    </div>
    {# Caroussel d'image de la voiture  #}
    <div class="col-lg-6 col-md-6 mb-4">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="{{ car.images.0.name }}" class="d-block w-100" alt="{{ car.title }}">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  {# Caractéristique #}
  <div class="row text-center">
    <h2>Caractéristique</h2>
    <div class="card-columns">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{car.gearbox}}</h5>
          <p class="card-text">Boîte de vitesse</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ car.engine }}</h5>
          <p class="card-text">Carburant</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ car.horsepower }} ch.</h5>
          <p class="card-text">Puissance</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ car.kilometers }} km</h5>
          <p class="card-text">Kilométrage</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ car.category.name }}</h5>
          <p class="card-text">Catégorie</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ car.seat }}</h5>
          <p class="card-text">Places</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ car.color }}</h5>
          <p class="card-text">Couleur</p>
        </div>
      </div>
    </div>
  </div>
  {# Formulaire de reservation #}
  <form>
  <div class="form-group">
    <label for="exampleInputEmail1">Dates de réservation</label>
    <input class="flatpickr" type="text" placeholder="Choisissez vos dates">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<script>
    flatpickr(".flatpickr", 
    {
      mode: "range",
      minDate: "today"
    });
</script>

{% endblock %}