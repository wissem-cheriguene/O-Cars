{% extends 'base.html.twig' %}

{% block title %}Bonjour {{app.user.firstname}}!{% endblock %}

{% block body %}
{# Flash message #}

<div class="container bg-dark pt-5">
  {% include "partials/_flash_msg.html.twig" %}
  <div class="row">
    <div class="col-sm">
      <h1 class="user-name">{{app.user.username}}</h1>
      <img src="https://source.unsplash.com/200x200/?photo,boy" alt="..." class="img-thumbnail">
    </div>
   
  
    <div class="col-sm">
      <div class="list-group">
        <h2 class="user-name">Mes actions</h2>
        {% if is_granted('ROLE_PROPRIO') %}
            <a href="{{ path('car_add') }}" class="list-group-item list-group-item-action">Ajouter une annonce</a>
        {% endif %}
        <a href="{{ path('edit') }}" class="list-group-item list-group-item-action">Modifier mes informations personnelles</a>
        <a href="{{ path('edit_password') }}" class="list-group-item list-group-item-action">Modifier mon mot de passe</a>
    </div>
    </div>
  </div>
  {# Mes annonces pour le profil proprio #}
  {% if is_granted('ROLE_PROPRIO') %}
  
    <div class="row mt-5">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-light">
                <th scope="col">Mes annonces</th>
                <th scope="col">Titre de l'annonce</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for index,car in cars %}
                    <tr class="table-{% if loop.index is divisible by(2) %}light{% else %}dark{% endif %}">
                        <th scope="row">{{index + 1}}</th>
                        <td>{{ car.title }}</td>
                        <td><a href="{{ path('car_edit', {id: car.id}) }}" class="btn btn-md btn-primary">Modifier</a></td>
                        <td>
                            <form action="{{ path('car_delete', {id:car.id}) }}" method="post">
                                <input type="hidden" name="token" value="{{ csrf_token('delete-car') }}" />
                                <input type="hidden" name="_method" value="DELETE" />
                                <button type="submit" class="btn btn-md btn-danger">
                                    Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

  {% endif %}
  {# Mon historique d'achat / factures pour le profil locataire #}
  
  <div class="row mt-5">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-light">
            <th scope="col">Mon historique d'achat</th>
            <th scope="col">Mes locations</th>
            <th scope="col">Du</th>
            <th scope="col">Au</th>
            <th scope="col">Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for index,rental in rentals %}
                <tr class="table-light">
                    <th scope="row">{{index + 1}}</th>
                    <td>{{ rental.car.title }}</td>
                    <td>{{ rental.startingDate|date('Y-m-d') }}</td>
                    <td>{{ rental.endingDate|date('Y-m-d') }}</td>
                    <td>{{ rental.billing }} â‚¬</td>
                    {# <td><a href="{{ path('car_edit', {id: car.id}) }}" class="card-link">Modifier</a></td>
                    <td>
                        <form action="{{ path('car_delete', {id:car.id}) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-car') }}" />
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Supprimer
                            </button>
                        </form>
                    </td> #}
                </tr>
            {% endfor %}
    </tbody>
    </table>
        <div style="width:100%">
            {{ knp_pagination_render(
                rentals,
                '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',
                {}, 
                {
                'align': 'center',
                'size': 'large',
                'rounded': true,
                }
            ) }}   
        </div>     
  </div>
</div>
{% endblock %}

