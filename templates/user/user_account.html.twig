{% extends 'base.html.twig' %}

{% block title %}Hello Monsieur X !{% endblock %}

{% block body %}
{# Flash message #}
{% include "partials/_flash_msg.html.twig" %}

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1 class="display-4">Bonjour Monsieur H</h1>
      <img src="https://source.unsplash.com/200x200/?photo,boy" alt="..." class="img-thumbnail">
    </div>
    <div class="col-sm">
      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action active">
            Mes actions
        </a>
        <a href="{{ path('car_add') }}" class="list-group-item list-group-item-action">Ajouter une annonce</a>
        <a href="#" class="list-group-item list-group-item-action">Modifier mes informations personnelles</a>
    </div>
    </div>
  </div>
  <div class="row mt-5">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
            <th scope="col">Mes annonces</th>
            <th scope="col">Titre de l'annonce</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for index,car in cars %}
                <tr>
                    <th scope="row">{{index + 1}}</th>
                    <td>{{ car.title }}</td>
                    <td><a href="{{ path('car_edit', {id: car.id}) }}" class="card-link">Modifier</a></td>
                    <td>
                        <form action="{{ path('car_delete', {id:car.id}) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-car') }}" />
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>
</div>
{% endblock %}

