{% extends 'base.html.twig' %}

{% block title %}Bonjour {{app.user.firstname}}!{% endblock %}

{% block body %}
{# Flash message #}
{% include "partials/_flash_msg.html.twig" %}

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1 class="display-4">Bonjour {{app.user.firstname}}</h1>
      <img src="https://source.unsplash.com/200x200/?photo,boy" alt="..." class="img-thumbnail">
    </div>
    <div class="col-sm">
      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action active">
            Mes actions
        </a>
        <a href="{{ path('car_add') }}" class="list-group-item list-group-item-action">Ajouter une annonce</a>
        <a href="#" class="list-group-item list-group-item-action">Modifier mes informations personnelles</a>
    </div>
    </div>
  </div>
  {# Mes annonces pour le profil proprio #}
  <div class="row mt-5">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
            <th scope="col">Mes annonces</th>
            <th scope="col">Titre de l'annonce</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for index,car in cars %}
                <tr>
                    <th scope="row">{{index + 1}}</th>
                    <td>{{ car.title }}</td>
                    <td><a href="{{ path('car_edit', {id: car.id}) }}" class="card-link">Modifier</a></td>
                    <td>
                        <form action="{{ path('car_delete', {id:car.id}) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-car') }}" />
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>
  {# Mon historique d'achat / factures pour le profil locataire #}
  
  <div class="row mt-5">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
            <th scope="col">Mon historique d'achat</th>
            <th scope="col">Mes locations</th>
            <th scope="col">Du</th>
            <th scope="col">Au</th>
            <th scope="col">Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for index,rental in rentals %}
                <tr>
                    <th scope="row">{{index + 1}}</th>
                    <td>{{ rental.car.title }}</td>
                    <td>{{ rental.startingDate|date('Y-m-d') }}</td>
                    <td>{{ rental.endingDate|date('Y-m-d') }}</td>
                    <td>{{ rental.billing }} â‚¬</td>
                    {# <td><a href="{{ path('car_edit', {id: car.id}) }}" class="card-link">Modifier</a></td>
                    <td>
                        <form action="{{ path('car_delete', {id:car.id}) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-car') }}" />
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Supprimer
                            </button>
                        </form>
                    </td> #}
                </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>
</div>
{% endblock %}

