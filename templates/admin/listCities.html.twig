{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}

    <div class="container pt-5">
        <h1> Gestion des départements</h1>
        <p>
            <a href="{{ path('admin_city_new') }}" class="btn btn-lg btn-success">Ajouter un nouveau département</a>
        </p>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-light">
                    <th>Département</th>
                    <th>Code postal</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for city in cities %}
                    <tr class="table-light">
                        <td> {{ city.name }} </td>
                        <td> {{ city.postalCode }} </td>
                        <td>
                            <a href="{{ path('admin_city_edit', {'id': city.id}) }}" class="btn btn-md btn-primary">Modifier</a>
                        <td>
                            <a href="{{ path('admin_city_delete', {'id': city.id}) }}" class="btn btn-md btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
