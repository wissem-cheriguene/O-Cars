{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

    <div class="container pt-5">
        <h1> Gestion des utilisateurs</h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr class="table-light">
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Adresse mail</th>
                <th>Role</th>
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody>
                {% for user in users %}
                    <tr class="table-light">
                        <td> {{ user.firstName }} </td>
                        <td> {{ user.lastname }} </td>
                        <td> {{ user.email }} </td>
                        <td> {{ user.role}} </td>
                        <td>
                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-md btn-primary">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('admin_users_delete', {'id': user.id, 'user':user}) }}" class="btn btn-md btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
