{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

    <div class="container pt-5">
        <h1> Gestion des catégories</h1>
        <p>
            <a href="{{ path('admin_category_new') }}" class="btn btn-lg btn-success">Ajouter une nouvelle catégorie</a>
        </p>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-light">
                    <th>Nom</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr class="table-light">
                    <td> {{ category.name }} </td>
                    <td>
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-md btn-primary">Modifier</a>
                    <td>
                        <a href="{{ path('admin_category_delete', {'id': category.id}) }}" class="btn btn-md btn-danger">Supprimer</a>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
