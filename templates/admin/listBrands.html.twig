{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des marques{% endblock %}

{% block body %}

    <div class="container pt-5">
        <h1> Gestion des marques</h1>
        <p>
            <a href="{{ path('admin_brand_new') }}" class="btn btn-lg btn-success">Ajouter une nouvelle marque</a>
        </p>

        <table class="table table-striped table-hover">
            <thead>
            <tr class="table-light">
                <th>Nom</th>
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {% for brand in brands %}
                <tr class="table-light">
                    <td> {{ brand.name }} </td>
                    <td>
                        <a href="{{ path('admin_brand_edit', {'id': brand.id}) }}" class="btn btn-md btn-primary">Modifier</a>
                    <td>
                        <a href="{{ path('admin_brand_delete', {'id': brand.id}) }}" class="btn btn-md btn-danger">Supprimer</a>

                </tr>
            {% endfor %}



            </tbody>

        </table>
    </div>

{% endblock %}
